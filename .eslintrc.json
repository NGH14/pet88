{
	"env": {
		"node": true,
		"browser": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"quotes": ["error", "single"],
		// we want to force semicolons
		"semi": ["error", "always"],
		// we want to avoid extraneous spaces
		"no-multi-spaces": ["error"]
	},
	"ignorePatterns": ["node_modules", "coverage", "dist", "*.*js"]
}
