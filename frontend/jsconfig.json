{
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"assets/*": ["./assets/*"],
			"components/*": ["./components/*"],
			"components/views/*": ["./components/views/*"],
			"context/*": ["./context/*"],
			"routes/*": ["./routes/*"],
			"utils/*": ["./utils/*"],
			"hooks/*": ["./hooks/*"],
			"pages/*": ["./pages/*"],
			"constants/*": ["./constants/*"],
			"styles/*": ["./styles/*"]
		}
	},
	"include": ["src", "./**/*.js", "./**/*.jsx"],
	"exclude": ["node_modules", "**/node_modules", "dist"]
}
