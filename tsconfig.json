{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ESNext",
		"baseUrl": "src",
		"outDir": "build",
		"sourceMap": true,
		"noImplicitAny": true,
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build"]
}
