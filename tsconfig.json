{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ESNext",
		"baseUrl": "src",
		"outDir": "build",
		"sourceMap": true,
		"noImplicitAny": true,
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"noEmit": true,
		"allowImportingTsExtensions": true
	},
	"include": ["src/**/*", "middleware/auth.js"],
	"exclude": ["node_modules", "build"]
}
