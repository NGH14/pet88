{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"ignorePatterns": [
		"node_modules",
		"coverage",
		"dist",
		"*.*js"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"perfectionist"
	],
	"rules": {
		// I want to avoid extraneous spaces
		"no-multi-spaces": [
			"error"
		],
		"perfectionist/sort-objects": [
			"error",
			{
				"order": "asc",
				"type": "natural"
			}
		],
		"quotes": [
			"error",
			"single"
		],
		// I want to force semicolons
		"semi": [
			"error",
			"always"
		]
	}
}