extends layouts/main.pug

block content
  table.card-wrapper(cellpadding="0", cellspacing="0")
    tbody
      tr
        td(align="")
          table.card(cellpadding="0", cellspacing="0")
            tbody
              tr
                td.card-container(align="")
                  table.card-body(cellpadding="0", cellspacing="0")
                    tbody
                      tr
                        td
                          table.spacer(border="0", cellpadding="0", cellspacing="0", width="100%")
                            tbody
                              tr
                                td(height="32")
                                  div &nbsp;
                          table.card-content(cellpadding="0", cellspacing="0")
                            tbody
                              tr
                                td.card-content-spacer-left &nbsp;
                                td
                                  h2(style="font-size: 24px; font-weight: 600; color: #1a1a1a;") Welcome to Pet88!
                                  p(style="font-size: 16px; color: #7a7a7a; line-height: 24px;")
                                    | Hi ${order.name},
                                    br
                                    | Thanks for joining our community. We are excited to have you on board.
                                    br
                                    br
                                    | You can now book our services and manage your appointments.
                                  table.spacer(border="0", cellpadding="0", cellspacing="0", width="100%")
                                    tbody
                                      tr
                                        td(height="24")
                                          div &nbsp;
                                  a.confirm-button-link(href="https://example.com/dashboard", target="_blank", style="background-color: #0074d4; color: #ffffff; padding: 12px 24px; text-decoration: none; border-radius: 6px;") Go to Dashboard
                                td.card-content-spacer-right &nbsp;
                          table.spacer(border="0", cellpadding="0", cellspacing="0", width="100%")
                            tbody
                              tr
                                td(height="24")
                                  div &nbsp;